rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Fichas Técnicas de Compliance - todas as versões
    match /artifacts/{version}/public/data/compliance/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Custos - todas as versões
    match /artifacts/{version}/public/data/costs/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Voos - todas as versões
    match /artifacts/{version}/public/data/flights/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Acesso padrão negado para qualquer outro caminho
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
