rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Fichas Técnicas de Compliance - Live collection (version-independent)
    match /artifacts/somengil-compliance-live/public/data/compliance/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Custos - Live collection (version-independent)
    match /artifacts/somengil-compliance-live/public/data/costs/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Voos - Live collection (version-independent)
    match /artifacts/somengil-compliance-live/public/data/flights/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Acesso padrão negado para qualquer outro caminho
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
