rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Fichas Técnicas de Compliance
    match /artifacts/somengil-compliance-v3/public/data/compliance/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Custos
    match /artifacts/somengil-compliance-v3/public/data/costs/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Voos
    match /artifacts/somengil-compliance-v3/public/data/flights/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Acesso padrão negado para qualquer outro caminho
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
