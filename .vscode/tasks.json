{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Iniciar Servidor PWA (porta 8000)",
      "type": "shell",
      "command": "cd /workspaces/installation && python3 -m http.server 8000",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "line": 1,
          "column": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Serving HTTP.*",
          "endsPattern": "^.*$"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
